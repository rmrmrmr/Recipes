<div>
  <%= button_to 'Logout', destroy_user_session_path, method: :delete %>
</div>

<div>
  <%= link_to "Add New Food", new_food_path %>
</div>

<table>
  <thead>
    <tr>
      <th>Food</th>
      <th>Measurement unit</th>
      <th>Unit Price</th>
      <th>Quantity</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @food.each do |food| %>
    <tr>
      <td><%= food.name %></td>
      <td><%= food.measurement_unit %></td>
      <td><%= food.price %></td>
      <td><%= food.quantity %></td>
      <td><%= button_to 'Delete', food_path(food.id), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>
